// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id   Int    @id @default(autoincrement())
  name String @unique

  @@map("cards")
}

model Attributes {
  id             Int @id @default(autoincrement())
  hp             Int
  attack         Int
  defense        Int
  specialAttack  Int
  specialDefense Int
  speed          Int

  @@map("attributes")
}
